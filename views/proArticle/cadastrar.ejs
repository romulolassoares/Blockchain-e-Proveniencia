<%- include('../head'); -%>
<%- include('../sidebar'); -%>
<%- include('../header'); -%>


<div class="content-wrap">

	<div class="main">
		<div class="container-fluid">
			<!-- /# row -->
			<section id="main-content">
				<div class="row">

					<div class="col-lg-12">

						<div class="card">
							<div class="card-title">
								<h3>New Transaction</h3>
							</div>

							<div class="col-md-12" style="font-size: x-large;">

								<form id="saveIoT" method="POST" action="/pro_article/save" enctype="application/json">

									<div class="form-row">
										<div class="form-group col-md-2">
											<label for="labelPkiUser">Usuário:</label>
											<select class="form-control" aria-label="Selecione o usuário" id="userPki">
												<!-- <option value="user1">user1</option>
												<option value="user2">user2</option>
												<option value="user3">user3</option> -->
											</select>
										</div>
										<div class="form-group col-md-5">
											<label for="labelPkiUser">Empresa de Origem:</label>
											<input type="text" class="form-control" id="companyOrigin" name="companyOrigin"
												placeholder="Digite a chave do Usuário" required>
										</div>
										<div class="form-group col-md-5">
											<label for="labelPkiIoT">Empresa de Destino:</label>
											<input type="text" class="form-control" id="companyDestination" name="companyDestination"
												placeholder="Digite a chave do dispositivo" required>
										</div>
									</div>

									<h3 style="text-align: center;">Informações do Documento</h3>

									<div class="form-group">
										<div class="form-row">
											<div class="form-group col-md-4">
												<label for="labelPrintBrand">Titulo:</label>
												<input type="text" class="form-control" id="documentTitle" name="documentTitle"
													placeholder="..." readonly>
											</div>
											<div class="form-group col-md-4">
												<label for="labelPrintMaterial">Formato:</label>
												<input type="text" class="form-control" id="documentFormat" name="documentFormat"
													placeholder="..." readonly>
											</div>
											<div class="form-group col-md-4">
												<label for="labelPrintMaterial">Autor:</label>
												<input type="text" class="form-control" id="documentAuthor" name="documentAuthor"
													placeholder="..." readonly>
											</div>									
										</div>
									</div>

									<div class="form-group">
										<div class="form-row">
											<div class="form-group col-md-12">
												<label for="labelPrintGUID">Base64:</label>
												<textarea class="form-control" rows="3" placeholder="...?" id="documentBase64" name="documentBase64" readonly></textarea>
												<!-- <input type="text" class="form-control" id="documentBase64" name="documentBase64"
													placeholder="..." readonly multiline rows="30"> -->
											</div>
										</div>
									</div>
									
									<div class="row">
										<div class="col-lg-5"></div>
										<div class="col-lg-2">
											<button type="submit" class="btn btn-success">Salvar</button>
										</div>
										<div class="col-lg-5"></div>
									</div>

								</form>

							</div>

						</div>
					</div>

				</div>
			</section>
		</div>
	</div>
</div>

<script src="/js/proArticleHelper.js"></script>


<%- include('../importScript'); -%>