<%- include('../head'); -%>
<%- include('../sidebar'); -%>
<%- include('../header'); -%>


<div class="content-wrap">

  <div class="main">
    <div class="container-fluid">

      <!-- /# row -->
      <section id="main-content">
        <div class="row">

          <div class="col-lg-12">

            <div class="card">
              <div class="card-title">
                <h3>New Transaction</h3>
              </div>
              <br>

              <div class="row">
                <div class="col-md-12" style="text-align: center; font-size: x-large;">
                  
                  <form id="saveIoT" method="POST" action="/transaction/save" enctype="application/json">

                    <div class="row">
                        <div class="col-lg-12">                            
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="labelPkiUser">ChaveUsuário:</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="userPki" name="userPki"
                                            placeholder="Digite a chave do Usuário" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">                            
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="labelPkiIoT">ChaveIoT:</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="iotPki" name="iotPki"
                                            placeholder="Digite a chave do dispositivo" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">                            
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="labelOperacaoIoT">Operação:</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="task" name="task"
                                            placeholder="Digite a operação a ser realizada" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                      <div class="col-lg-5"></div>
                      <div class="col-lg-2">
                        <button type="submit" class="btn btn-success">Salvar</button>
                      </div>
                      <div class="col-lg-5"></div>
                    </div>
      
                  </form>

                </div>
              </div>
            </div>
          </div>

        </div>
      </section>
    </div>
  </div>
</div>

<%- include('../importScript'); -%>
</body>

</html>