<%- include('../head'); -%>
<%- include('../sidebar'); -%>
<%- include('../header'); -%>


<div class="content-wrap">

  <div class="main">
    <div class="container-fluid">

      <!-- /# row -->
      <section id="main-content">
        <div class="row">

          <div class="col-lg-12">

            <div class="card">
              <div class="card-title">
                <h3>New Print Document</h3>
              </div>
              <br>

              <div class="row">
                <div class="col-md-12" style="text-align: center; font-size: x-large;">
                  

                    <form id="saveIoT" method="POST" action="/document/save" enctype="application/json">

                    <div class="row">
                        <div class="col-lg-12">
                            
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="labelNome">Nome:</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="nome" name="nome"
                                            placeholder="Digite o nome do dispositivo" required>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                          
                          <div class="form-group">
                            <div class="row">
                              <div class="col-lg-4">
                                <label for="labelCor">Cor:</label>
                              </div>
                              <div class="col-lg-8">
                                
                                <select class="form-control" id="cor" name="cor">
                                  <option style="color: rgb(70, 70, 70);" value="" disabled selected hidden>Selecione uma cor</option>
                                  <option value="1">Preto e Branco</option>
                                  <option value="2">Colorido</option>
                                </select>
  
                              </div>
                            </div>
                          </div>
  
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="labelCopias">Cópias:</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="number" class="form-control" id="copias" name="copias"
                                            placeholder="Número de cópias" required>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                          
                          <div class="form-group">
                            <div class="row">
                              <div class="col-lg-4">
                                <label for="labelOrientacao">Orientação:</label>
                              </div>
                              <div class="col-lg-8">
                                
                                <select class="form-control" id="orientacao" name="orientacao">
                                  <option style="color: rgb(70, 70, 70);" value="" disabled selected hidden>Orientação</option>
                                  <option value="1">Retrato</option>
                                  <option value="2">Paisagem</option>
                                </select>
  
                              </div>
                            </div>
                          </div>
  
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label for="labelInputFile">Enviar o arquivo</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="file" id="file" name="file" accept="image/png, image/jpeg" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                      <div class="col-lg-5"></div>
                      <div class="col-lg-2">
                        <button type="submit" class="btn btn-success">Salvar</button>
                      </div>
                      <div class="col-lg-5"></div>
                    </div>
      
                    </form>
                  
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>
    </div>
  </div>
</div>

<%- include('../importScript'); -%>
</body>

</html>